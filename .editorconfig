; editorconfig.org
root = true

; Unix-style newlines
[*]
end_of_line = LF
indent_style = space

[*.html]
indent_size = 4

[*.css]
indent_size = 4

[*.scss]
indent_size = 4

[*.xml]
indent_size = 4

[*.coffee]
indent_size = 2

[*.js]
indent_size = 2

[*.rb]
indent_size = 2

[*.ru]
indent_size = 2

[Gemfile]
indent_size = 2

[Guardfile]
indent_size = 2

[Rakefile]
indent_size = 2